---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteData from '../data.json';

const { team, pages, company } = siteData;
const pageData = pages.team;
---

<BaseLayout title={`${pageData.title} | ${company.name}`}>
    <!-- banner -->
    <div class="mil-inner-banner">
        <div class="mil-banner-content mil-up">
            <div class="mil-animation-frame">
                <div class="mil-animation mil-position-4 mil-dark mil-scale" data-value-1="6" data-value-2="1.4"></div>
            </div>
            <div class="container">
                <ul class="mil-breadcrumbs mil-mb-60">
                    <li><a href="/">Homepage</a></li>
                    <li><a href="/team">Team</a></li>
                </ul>
                <h1 class="mil-mb-60">Meet <span class="mil-thin">Our</span><br> Creative <span class="mil-thin">Team</span></h1>
                <a href="#team" class="mil-link mil-dark mil-arrow-place mil-down-arrow">
                    <span>Our team</span>
                </a>
            </div>
        </div>
    </div>
    <!-- banner end -->

    <!-- team -->
    <section id="team">
        <div class="container mil-p-120-90">
            <div class="row">
                {team.map(member => (
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="mil-team-card mil-up mil-mb-30">
                            <img src={member.image} alt="Team member">
                            <div class="mil-description">
                                <div class="mil-secrc-text">
                                    <h5 class="mil-muted mil-mb-5">
                                        <a href="/team">{member.name}</a>
                                    </h5>
                                    <p class="mil-link mil-light-soft mil-mb-10">{member.role}</p>
                                    {member.bio && (
                                        <p class="mil-text mil-mb-15" style="font-size: 14px; line-height: 1.4; color: rgba(255,255,255,0.7);">{member.bio}</p>
                                    )}
                                    <ul class="mil-social-icons mil-center">
                                        {member.social.instagram && (
                                            <li>
                                                <a href={member.social.instagram} target="_blank" class="social-icon" data-no-swup>
                                                    <i class="fab fa-instagram"></i>
                                                </a>
                                            </li>
                                        )}
                                        {member.social.linkedin && (
                                            <li>
                                                <a href={member.social.linkedin} target="_blank" class="social-icon" data-no-swup>
                                                    <i class="fab fa-linkedin"></i>
                                                </a>
                                            </li>
                                        )}
                                        {member.social.github && (
                                            <li>
                                                <a href={member.social.github} target="_blank" class="social-icon" data-no-swup>
                                                    <i class="fab fa-github"></i>
                                                </a>
                                            </li>
                                        )}
                                        {member.social.behance && (
                                            <li>
                                                <a href={member.social.behance} target="_blank" class="social-icon" data-no-swup>
                                                    <i class="fab fa-behance"></i>
                                                </a>
                                            </li>
                                        )}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
    <!-- team end -->


    <!-- call to action -->
    <section class="mil-soft-bg">
        <div class="container mil-p-120-120">
            <div class="row">
                <div class="col-lg-10">
                    <span class="mil-suptitle mil-suptitle-right mil-suptitle-dark mil-up">Looking to make your mark? We'll help you turn <br> your project into a success story.</span>
                </div>
            </div>
            <div class="mil-center">
                <h2 class="mil-up mil-mb-60">Ready to bring your <span class="mil-thin">ideas to</span> life? <br> We're <span class="mil-thin">here to help</span></h2>
                <div class="mil-up">
                    <a href="/contact" class="mil-button mil-arrow-place">
                        <span>Contact us</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- call to action end -->
</BaseLayout>